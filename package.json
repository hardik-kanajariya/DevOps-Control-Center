{
  "name": "devops-control-center",
  "version": "1.0.0",
  "description": "A comprehensive CI/CD management tool for developers",
  "main": "dist/main/main/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"wait-on http://localhost:5175 && npm run dev:electron\"",
    "dev:vite": "vite --port 5175",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p src/main/tsconfig.json",
    "build:renderer": "vite build",
    "build:electron": "electron-builder",
    "preview": "vite preview",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "electron",
    "devops",
    "ci-cd",
    "github",
    "deployment",
    "vps",
    "automation"
  ],
  "author": "hardikkanajariya.in",
  "license": "MIT",
  "build": {
    "appId": "com.hardikkanajariya.devops-control-center",
    "productName": "DevOps Control Center",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "icon": "src/assets/icon.icns"
    },
    "win": {
      "icon": "src/assets/icon.ico"
    },
    "linux": {
      "icon": "src/assets/icon.png"
    }
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "@octokit/rest": "^22.0.0",
    "@reduxjs/toolkit": "^2.8.2",
    "@types/electron-store": "^1.3.1",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "electron": "^37.2.6",
    "electron-store": "^10.1.0",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-redux": "^9.2.0",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.9.2",
    "vite": "^7.1.2"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron-builder": "^26.0.12",
    "wait-on": "^8.0.4"
  }
}
