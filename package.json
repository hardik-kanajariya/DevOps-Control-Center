{
  "name": "devops-control-center",
  "version": "1.0.0",
  "description": "A comprehensive CI/CD management tool for developers",
  "main": "dist/main/main/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"wait-on http://localhost:5175 && npm run dev:electron\"",
    "dev:vite": "vite --port 5175",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p src/main/tsconfig.json",
    "build:renderer": "vite build",
    "build:electron": "electron-builder",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run"
  },
  "keywords": [
    "electron",
    "devops",
    "ci-cd",
    "github",
    "deployment",
    "vps",
    "automation"
  ],
  "author": "hardikkanajariya.in",
  "license": "MIT",
  "build": {
    "appId": "com.hardikkanajariya.devops-control-center",
    "productName": "DevOps Control Center",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "icon": "src/assets/icon.icns"
    },
    "win": {
      "icon": "src/assets/icon.ico"
    },
    "linux": {
      "icon": "src/assets/icon.png"
    }
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "@octokit/rest": "^22.0.0",
    "@reduxjs/toolkit": "^2.8.2",
    "@types/electron-store": "^1.3.1",
    "@types/sqlite3": "^3.1.11",
    "@types/ssh2": "^1.15.5",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "electron": "^37.2.6",
    "electron-store": "^10.1.0",
    "mongodb": "^6.18.0",
    "mysql2": "^3.14.3",
    "pg": "^8.16.3",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-redux": "^9.2.0",
    "redis": "^5.8.1",
    "sqlite3": "^5.1.7",
    "ssh2": "^1.16.0",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.9.2",
    "vite": "^7.1.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.1",
    "@types/pg": "^8.15.5",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/redis": "^4.0.10",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron-builder": "^26.0.12",
    "electron-updater": "^6.6.2",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "jsdom": "^26.1.0",
    "ts-jest": "^29.4.1",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.4"
  }
}
