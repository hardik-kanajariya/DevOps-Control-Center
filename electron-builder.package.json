{
    "name": "devops-control-center",
    "version": "1.0.0",
    "description": "Unified DevOps management platform",
    "main": "dist-electron/main.js",
    "homepage": "https://github.com/devops-control-center/devops-control-center",
    "author": {
        "name": "DevOps Control Center Team",
        "email": "support@devopscontrol.center"
    },
    "license": "MIT",
    "private": true,
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build && electron-builder",
        "build:dir": "tsc && vite build && electron-builder --dir",
        "build:win": "tsc && vite build && electron-builder --win",
        "build:mac": "tsc && vite build && electron-builder --mac",
        "build:linux": "tsc && vite build && electron-builder --linux",
        "build:all": "tsc && vite build && electron-builder --win --mac --linux",
        "pack": "electron-builder --dir",
        "dist": "electron-builder",
        "dist:win": "electron-builder --win",
        "dist:mac": "electron-builder --mac",
        "dist:linux": "electron-builder --linux",
        "postinstall": "electron-builder install-app-deps",
        "test": "vitest",
        "test:coverage": "vitest --coverage",
        "audit": "npm audit",
        "security:audit": "npm audit && npm run test:security",
        "test:security": "node scripts/security-test.js",
        "prepare": "husky install"
    },
    "keywords": [
        "devops",
        "automation",
        "deployment",
        "monitoring",
        "electron",
        "typescript",
        "react"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/devops-control-center/devops-control-center.git"
    },
    "bugs": {
        "url": "https://github.com/devops-control-center/devops-control-center/issues"
    },
    "engines": {
        "node": ">=16.0.0",
        "npm": ">=8.0.0"
    },
    "dependencies": {
        "electron-updater": "^6.1.7",
        "axios": "^1.6.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.8.0",
        "lucide-react": "^0.294.0",
        "@types/node": "^20.10.0"
    },
    "devDependencies": {
        "@types/react": "^18.2.45",
        "@types/react-dom": "^18.2.18",
        "@vitejs/plugin-react": "^4.2.1",
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1",
        "typescript": "^5.3.3",
        "vite": "^5.0.8",
        "vitest": "^1.0.4",
        "@vitest/coverage-v8": "^1.0.4",
        "@testing-library/react": "^14.1.2",
        "@testing-library/jest-dom": "^6.1.5",
        "jsdom": "^23.0.1",
        "husky": "^8.0.3",
        "lint-staged": "^15.2.0",
        "@electron/notarize": "^2.2.1",
        "dmg-builder": "^24.9.1"
    },
    "build": {
        "appId": "com.devopscontrol.center",
        "productName": "DevOps Control Center",
        "copyright": "Copyright Â© 2024 DevOps Control Center Team",
        "directories": {
            "output": "dist",
            "buildResources": "build"
        },
        "files": [
            "dist-electron/",
            "dist/",
            "node_modules/",
            "package.json",
            "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
            "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
            "!**/node_modules/*.d.ts",
            "!**/node_modules/.bin",
            "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
            "!.editorconfig",
            "!**/._*",
            "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
            "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
            "!**/{appveyor.yml,.travis.yml,circle.yml}",
            "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
        ],
        "extraResources": [
            {
                "from": "assets/",
                "to": "assets/",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "publish": [
            {
                "provider": "github",
                "owner": "devops-control-center",
                "repo": "devops-control-center",
                "releaseType": "release"
            }
        ],
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                },
                {
                    "target": "portable",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                },
                {
                    "target": "zip",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                }
            ],
            "icon": "build/icon.ico",
            "requestedExecutionLevel": "asInvoker",
            "signingHashAlgorithms": [
                "sha256"
            ],
            "sign": "./scripts/sign-windows.js",
            "certificateFile": "",
            "certificatePassword": "",
            "timestampUrl": "http://timestamp.comodoca.com"
        },
        "nsis": {
            "oneClick": false,
            "perMachine": false,
            "allowElevation": true,
            "allowToChangeInstallationDirectory": true,
            "installerIcon": "build/icon.ico",
            "uninstallerIcon": "build/icon.ico",
            "installerHeaderIcon": "build/icon.ico",
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "DevOps Control Center",
            "include": "build/installer.nsh",
            "script": "build/installer.nsh"
        },
        "mac": {
            "target": [
                {
                    "target": "dmg",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                },
                {
                    "target": "zip",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                }
            ],
            "icon": "build/icon.icns",
            "category": "public.app-category.developer-tools",
            "darkModeSupport": true,
            "hardenedRuntime": true,
            "gatekeeperAssess": false,
            "entitlements": "build/entitlements.mac.plist",
            "entitlementsInherit": "build/entitlements.mac.inherit.plist",
            "notarize": false,
            "type": "distribution"
        },
        "dmg": {
            "sign": false,
            "title": "DevOps Control Center",
            "icon": "build/icon.icns",
            "background": "build/dmg-background.png",
            "contents": [
                {
                    "x": 410,
                    "y": 150,
                    "type": "link",
                    "path": "/Applications"
                },
                {
                    "x": 130,
                    "y": 150,
                    "type": "file"
                }
            ],
            "window": {
                "width": 540,
                "height": 380
            }
        },
        "linux": {
            "target": [
                {
                    "target": "AppImage",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "deb",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "rpm",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "tar.gz",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "snap",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "build/icons/",
            "category": "Development",
            "maintainer": "DevOps Control Center Team <support@devopscontrol.center>",
            "vendor": "DevOps Control Center",
            "synopsis": "Unified DevOps management platform",
            "description": "A comprehensive DevOps control center for managing multiple providers, deployments, and monitoring infrastructure. Streamline your development operations with an intuitive interface and powerful automation capabilities."
        },
        "deb": {
            "depends": [
                "gconf2",
                "gconf-service",
                "libnotify4",
                "libappindicator1",
                "libxtst6",
                "libnss3"
            ],
            "priority": "optional",
            "afterInstall": "build/linux/after-install.sh",
            "afterRemove": "build/linux/after-remove.sh"
        },
        "rpm": {
            "depends": [
                "libnotify",
                "libappindicator",
                "libxtst",
                "nss"
            ],
            "afterInstall": "build/linux/after-install.sh",
            "afterRemove": "build/linux/after-remove.sh"
        },
        "snap": {
            "grade": "stable",
            "confinement": "strict",
            "environment": {
                "DISABLE_WAYLAND": "1"
            },
            "plugs": [
                "default",
                "home",
                "network",
                "network-bind",
                "removable-media"
            ]
        },
        "appImage": {
            "license": "MIT"
        }
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,css,md}": [
            "prettier --write"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "pre-push": "npm run test && npm run security:audit"
        }
    }
}