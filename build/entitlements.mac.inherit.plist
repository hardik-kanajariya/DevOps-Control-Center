<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Inherit parent entitlements -->
    <key>com.apple.security.inherit</key>
    <true/>
    
    <!-- Allow JIT for child processes (JavaScript V8 engine) -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
    
    <!-- Allow unsigned executable memory for renderer processes -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    
    <!-- Disable library validation for renderer processes -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
    
    <!-- Network access inherited from parent -->
    <key>com.apple.security.network.client</key>
    <true/>
    
    <!-- File system access inherited from parent -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
</dict>
</plist>
